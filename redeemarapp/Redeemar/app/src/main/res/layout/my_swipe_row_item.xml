<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_books"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <!--Bottom View For Right to Left-->
        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/green_header"
            android:weightSum="1">

            <TextView
                android:id="@+id/validate_offer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/validate"
                style="@style/WhiteLargeText"  />

        </LinearLayout>


        <!-- Top View,  Row itemView of RecyclerView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_row_selector"
            android:padding="0dp">
            <!-- Thumbnail Image -->

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_watermark" />


            <TextView
                android:id="@+id/on_demand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:background="@color/violet_opac"
                android:textColor="@color/white"
                android:padding="2dp"
                android:textSize="11sp"
                android:text="@string/on_demand"
                android:visibility="gone"/>

            <!-- Offer Title -->
            <TextView
                android:id="@+id/offer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="@string/offer_title"
                android:lines="2"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:textColor="@color/green_text"/>

            <LinearLayout
                android:id="@+id/offer_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_below="@id/offer_description"
                android:paddingBottom="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/price_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PAY"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/pay_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="$"
                            android:gravity="start"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discount_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAVE"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:paddingLeft="5dp"
                            android:gravity="start"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_text" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/price_bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/retail_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/retail_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ Value"
                            android:gravity="left"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/validity_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/expires"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="* Expires in days"
                            android:gravity="left"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>





        </RelativeLayout>


    </com.daimajia.swipe.SwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</android.support.v7.widget.CardView>

