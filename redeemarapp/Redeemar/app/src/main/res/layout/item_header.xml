<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/brandLayout"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="4dp"
		android:paddingBottom="4dp">

		<LinearLayout
			android:id="@+id/thumb"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center_vertical">

			<!-- Thumbnail Image -->
			<ImageView
				android:id="@+id/thumbnailBrand"
				android:src="@drawable/icon_watermark"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:padding="4dp"
				android:scaleType="fitStart"
				android:layout_gravity="center"
				android:adjustViewBounds="false"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true" />


		</LinearLayout>


		<TableLayout
			android:id="@+id/LeftHeaderLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:shrinkColumns="*"
			android:stretchColumns="*"
			android:paddingLeft="180dp">

			<TableRow
				android:id="@+id/tableRow2"
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="0dp"
					android:gravity="center">

					<TextView
						android:id="@+id/numActive"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:paddingTop="4dp"
						android:paddingBottom="4dp"
						android:gravity="center"
						android:textSize="14sp"
						android:textColor="@color/black"
						android:textStyle="bold"
						android:background="@drawable/rounded_corner" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="0dp"
					android:gravity="center">

					<TextView
						android:id="@+id/numOffers"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:paddingTop="4dp"
						android:paddingBottom="4dp"
						android:gravity="center"
						android:textSize="14sp"
						android:textColor="@color/black"
						android:textStyle="bold"
						android:background="@drawable/rounded_corner" />

				</LinearLayout>


				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="0dp"
					android:gravity="center"
					android:visibility="visible">

					<TextView
						android:id="@+id/numOnDemand"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:paddingTop="4dp"
						android:paddingBottom="4dp"
						android:gravity="center"
						android:textSize="14sp"
						android:textColor="@color/white"
						android:textStyle="bold"
						android:background="@drawable/rounded_corner_green" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="0dp"
					android:gravity="center">

					<TextView
						android:id="@+id/distance"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="0"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:paddingTop="4dp"
						android:paddingBottom="4dp"
						android:gravity="center"
						android:textSize="14sp"
						android:textColor="@color/black"
						android:textStyle="bold"
						android:background="@drawable/rounded_corner" />

				</LinearLayout>



			</TableRow>


		</TableLayout>


		<LinearLayout
			android:id="@+id/RightTopLayout"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@+id/thumb"
			android:layout_toRightOf="@+id/thumb"
			android:layout_below="@+id/LeftHeaderLayout"
			android:gravity="center_horizontal|top">


			<TextView
				android:id="@+id/brandInfo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="16dp"
				android:paddingLeft="70dp"
				android:paddingRight="4dp"
				android:gravity="left|center_vertical"
				android:color="@color/white"
				android:textStyle="bold"
				android:text=""
				android:textSize="14sp"
				android:layout_alignParentBottom="true"
				android:layout_toRightOf="@+id/thumbnailBrand"
				android:layout_toEndOf="@+id/thumbnailBrand" />

		</LinearLayout>



	</RelativeLayout>


	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/holo_green_dark"/>



	<ImageView
		android:id="@+id/arrow"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="-5dp"
		android:background="@drawable/ic_line"
		android:visibility="gone" />

</LinearLayout>
