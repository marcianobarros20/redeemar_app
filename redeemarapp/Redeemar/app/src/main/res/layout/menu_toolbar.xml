<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">



    <LinearLayout
        android:id="@+id/insideToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_above="@id/my_recycler_view"
        android:padding="4dp"
        android:background="@color/darkGray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:text="@string/user_location"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Manhattan"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/rounded_corner"
            android:visibility="gone" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/rounded_corner"
            android:hint="@string/search_location">
            <requestFocus />
        </AutoCompleteTextView>



        <ImageView
            android:id="@+id/menu_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/ic_thumb_green"
            android:layout_gravity="center_vertical|right"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/menu_thumb_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/ic_list_green"
            android:layout_gravity="center_vertical|right"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_map_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/ic_map_view"
            android:layout_gravity="center_vertical|right"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/insideBottomToolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_below="@id/tvUserLocation"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:weightSum="1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"/>


        <TextView
            android:id="@+id/search_category"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:gravity="left"
            android:text="@string/category"
            android:textColor="@color/darkGray" />

        <EditText
            android:id="@+id/txtKeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:hint="@string/search"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>