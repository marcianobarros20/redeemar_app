<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg01"
    android:padding="@dimen/baseline_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_welcome"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/redeemar"></ImageView>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/header"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/brand_logo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxHeight="@dimen/medium_brand_logo_height"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/redeemar" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/join_our_community"
            android:layout_marginLeft="@dimen/content_padding"
            android:layout_marginRight="@dimen/content_padding"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/content_padding"
            style="@style/GreenMedText"
            android:layout_below="@+id/brand_logo_image"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <!-- Login Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@id/header">

            <!--  Email Text -->
            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/email_address"
                android:drawableLeft="@drawable/envelope"
                android:background="@drawable/box_tf"
                android:gravity="center"
                android:paddingLeft="@dimen/button_padding_med"
                android:paddingRight="@dimen/button_padding_med"
                android:singleLine="true"/>


            <!--  Password Text -->
            <EditText

                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:hint="@string/password"
                android:drawableLeft="@drawable/lock"
                android:background="@drawable/box_tf"
                android:gravity="center"
                android:paddingLeft="@dimen/regular_padding"
                android:paddingRight="@dimen/regular_padding"
                android:inputType="textPassword"/>


            <!-- Login button -->

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/button_title_large"
                android:background="@drawable/button_green"
                android:padding="@dimen/button_padding_med"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/sign_in"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/btn_login_fb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_title_med"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="8dp" />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_sign_in_google"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login_fb"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>


        </LinearLayout>
        <!-- Login Form Ends -->



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/header">


            <!-- Link to Registration Screen -->
            <TextView android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/new_to_redeemar"
                android:textColor="@color/white"
                android:textSize="@dimen/button_title_Xlarge"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>

            <!-- Link to Forgot Password Screen -->
            <TextView android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/forgot_password"
                android:textColor="@color/white"
                android:textSize="@dimen/button_title_large"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>



        </LinearLayout>




    </LinearLayout>

    </LinearLayout>

</ScrollView>